{
  "name": "vscode-coder4",
  "displayName": "Coder4",
  "description": "Coder4",
  "version": "0.0.1",
  "author": "BillChiu",
  "license": "MIT",
  "publisher": "billchiu",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Coder4",
        "properties": {
          "coder4.files.extension": {
            "type": "string",
            "default": "py",
            "enum": [
              "py",
              "js",
              "jsx",
              "ts",
              "tsx"
            ],
            "scope": "resource",
            "description": "Sets the default extension for the generated files"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "coder4.python.pyproject.toml",
        "title": "pyproject.toml",
        "category": "coder4"
      },
      {
        "command": "coder4.python.file",
        "title": "Python File",
        "category": "coder4"
      },
      {
        "command": "coder4.python.package",
        "title": "Python Package",
        "category": "coder4"
      },
      {
        "command": "coder4.file.layout",
        "title": "Generate Layout",
        "category": "coder4"
      },
      {
        "command": "coder4.file.component",
        "title": "Generate Component",
        "category": "coder4"
      },
      {
        "command": "coder4.file.loading",
        "title": "Generate Loading",
        "category": "coder4"
      },
      {
        "command": "coder4.file.page",
        "title": "Generate Page",
        "category": "coder4"
      },
      {
        "command": "coder4.terminal.project",
        "title": "Create Project",
        "category": "coder4"
      }
    ],
    "submenus": [
      {
        "id": "coder4.submenu",
        "label": "Coder4 File Generator"
      },
      {
        "id": "coder4.python.submenu",
        "label": "Coder4 Python Generator"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "coder4.submenu",
          "group": "2_workspace",
          "when": "explorerViewletFocus && explorerResourceIsFolder && !explorerResourceIsRoot"
        },
        {
          "submenu": "coder4.python.submenu",
          "group": "2_workspace",
          "when": "explorerViewletFocus && explorerResourceIsFolder && !explorerResourceIsRoot"
        }
      ],
      "coder4.python.submenu": [
        {
          "command": "coder4.python.package",
          "group": "2_0"
        },
        {
          "command": "coder4.python.file",
          "group": "2_0"
        },
        {
          "command": "coder4.python.pyproject.toml",
          "group": "2_0"
        }
      ],
      "coder4.submenu": [
        {
          "command": "coder4.file.layout",
          "group": "1_0"
        },
        {
          "command": "coder4.file.component",
          "group": "1_0"
        },
        {
          "command": "coder4.file.loading",
          "group": "1_0"
        },
        {
          "command": "coder4.file.page",
          "group": "1_0"
        }
      ]
    },
    "snippets": [
      {
        "language": "python",
        "path": "./snippets/base.json"
      },
      {
        "language": "python",
        "path": "./snippets/comprehension.json"
      }
    ]
  },
  "extensionPack": [
    "ms-python.python"
  ],
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}